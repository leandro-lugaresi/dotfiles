{
  "editor.rulers": [80, 120],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,
  "editor.detectIndentation": false,
  "editor.tabCompletion": "on",
  "editor.renderIndentGuides": false,
  "editor.fontFamily": "'Fira Code Nerd Font','Fira Code'",
  "editor.fontLigatures": true,
  "explorer.openEditors.visible": 0,
  "explorer.confirmDragAndDrop": false,
  "window.restoreWindows": "none",
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "files.autoSave": "off",
  "files.trimTrailingWhitespace": true,
  "go.coverOnSave": true,
  "go.testOnSave": true,
  "go.coverageDecorator": {
    "type": "gutter"
  },
  "go.formatTool": "goimports",
  "go.formatFlags": ["-s", "-w"],
  "go.buildFlags": ["-v"],
  "go.lintTool": "golangci-lint",
  "go.docsTool": "guru",
  "go.useLanguageServer": true,
  "go.languageServerExperimentalFeatures": {
    "diagnostics": true // for build and vet errors as you type
  },
  "go.alternateTools": {
    "gofmt": "gofumpt",
    "goimports": "gofumports"
  },
  "files.eol": "\n",
  "workbench.editor.showIcons": true,
  "workbench.startupEditor": "none",
  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": true,
  "search.exclude": {
    "**/*.lock": true,
    "**/**/node_modules": true,
    "**/bower_components": true,
    "**/node_modules": true,
    "/vendor": true
  },
  "terminal.integrated.fontFamily": "'Hack Nerd Font','Fira Code','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "terminal.external.linuxExec": "alacritty",
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableCommitSigning": true,
  "[go]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.snippetSuggestions": "bottom",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[graphql]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[ruby]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[properties]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "gitlens.keymap": "alternate",
  "diffEditor.ignoreTrimWhitespace": false,
  "gitlens.advanced.messages": {
    "suppressLineUncommittedWarning": true,
    "suppressShowKeyBindingsNotice": true
  },
  "explorer.confirmDelete": false,
  "workbench.sideBar.location": "right",
  "breadcrumbs.enabled": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "terminal.integrated.rendererType": "experimentalWebgl",
  "html.format.endWithNewline": true,
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorTheme": "Gruvbox Light Hard",
  "liveshare.audio.joinCallBehavior": "accept",
  "git.suggestSmartCommit": false,
  "vscode-neovim.neovimPath": "/usr/bin/nvim",
  "workbench.preferredDarkColorTheme": "Monochrome Dark Amplified",
  "workbench.preferredLightColorTheme": "Monochrome Light Amplified",
  "zenMode.hideLineNumbers": false,
  "window.restoreFullscreen": true,
  "editor.minimap.maxColumn": 100,
  "editor.renderLineHighlight": "gutter",
  "vscode-neovim.mouseSelectionStartVisualMode": true,
  "beautify.language": {
    "css": ["css", "less", "scss"],
    "html": ["htm", "html"]
  },
  "colorize.languages": [
    "plaintext",
    "css",
    "sass",
    "scss",
    "less",
    "postcss",
    "sss",
    "stylus",
    "xml",
    "svg",
    "ini",
    "yaml"
  ],
  "colorize.include": ["dunstrc"],
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 4,
  "workbench.iconTheme": "vs-minimal",
  "workbench.editor.showTabs": false,
  "workbench.editor.untitled.labelFormat": "name",
  "window.autoDetectColorScheme": true,
  "files.insertFinalNewline": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": false,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-c>": false,
    "<C-v>": false,
    "<C-n>": false,
    "<C-x>": false
  },
  "ruby.format": "rubocop",
  "ruby.useBundler": false,
  "ruby.useLanguageServer": true,
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "terminal.integrated.shell.linux": "/bin/fish",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.activityBar.visible": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "window.menuBarVisibility": "toggle"
}
